                    android:text="부대"
                    android:gravity="center"/>

                <RadioButton
                    android:id="@+id/r_btn1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="육군" />

                <RadioButton
                    android:id="@+id/r_btn2"
