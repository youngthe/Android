<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 전체 레이아웃-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beige"
        android:orientation="vertical"
        android:weightSum="10">

        <!--첫 번째 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/modify"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/pencil"
                    android:layout_marginTop="10dp"
                    android:onClick="onClickModify">
                </ImageView>
                <ImageView
                    android:id="@+id/Main_background"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/test"
                    android:scaleType="centerCrop">

                </ImageView>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/determinateBar1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="18dp"
                    android:text="입대일"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignRight="@+id/determinateBar1"
                    android:layout_alignBottom="@+id/determinateBar1"
                    android:layout_marginTop="44dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="right"
                    android:text="전역일"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <ProgressBar
                    android:id="@+id/determinateBar1"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="110dp"
                    android:progress="20"
                    android:progressDrawable="@drawable/progressbar_progressbar1" />

                <!--Percent1(복무일)-->
                <TextView
                    android:id="@+id/percent1"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignLeft="@id/determinateBar2"
                    android:layout_alignBottom="@+id/determinateBar1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="-2dp"
                    android:textColor="@color/white"
                    android:textStyle="bold">

                </TextView>
                <!--D-Day 계산 결과 출력-->
                <TextView
                    android:id="@+id/endD_day"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignRight="@+id/determinateBar1"
                    android:layout_alignBottom="@+id/determinateBar1"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="-2dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>


                <TextView
                    android:id="@+id/Current_class"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/determinateBar2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="18dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/Next_class"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignRight="@+id/determinateBar2"
                    android:layout_alignBottom="@+id/determinateBar2"
                    android:layout_marginTop="44dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

                <ProgressBar
                    android:id="@+id/determinateBar2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="70dp"
                    android:progressDrawable="@drawable/progressbar_progressbar1"
                    android:progress="20"/>
                <TextView
                    android:id="@+id/nextClassD_day"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_alignRight="@+id/determinateBar2"
                    android:layout_alignBottom="@+id/determinateBar2"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="-2dp"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>
                <!--다음 계급까지 남은 퍼센트 -->
                <TextView
                    android:id="@+id/percent2"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignLeft="@id/determinateBar2"
                    android:layout_alignBottom="@+id/determinateBar2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="-2dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"></TextView>

            </RelativeLayout>

        </LinearLayout>
        <!--두 번째 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2,3">
                <TableRow>

                    <ImageView
                        android:id="@+id/ImageView1"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_column="0"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/onepage">

                    </ImageView>

                    <ImageView
                        android:id="@+id/ImageView2"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/twopage"></ImageView>

                    <ImageView
                        android:id="@+id/ImageView3"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/treepage"></ImageView>

                    <ImageView
                        android:id="@+id/ImageView4"
                        android:layout_width="50dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/fourpage"></ImageView>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>